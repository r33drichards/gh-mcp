# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# GitHub OAuth
GITHUB_CLIENT_ID=your-client-id
GITHUB_CLIENT_SECRET=your-client-secret

# Fly.io
FLY_API_TOKEN=your-fly-api-token
FLY_ORG_SLUG=personal

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
MCP_SERVER_DOMAIN=mcp.your-app.fly.dev

# Session (generate with: openssl rand -hex 32)
SESSION_ENCRYPTION_KEY=your-32-byte-hex-key

# Fly MCP Server
FLY_MCP_APP_NAME=gh-mcp-server
# Image is automatically pushed to Fly registry by GitHub Actions
# Run: cd apps/mcp-server && ./deploy.sh (or trigger the GHA workflow)
MCP_SERVER_IMAGE=registry.fly.io/gh-mcp-server:latest
